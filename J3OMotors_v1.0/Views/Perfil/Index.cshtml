@model J3OMotors_v1._0.Models.Perfil.PerfilViewModel



@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<link href="~/css/MyCustoms.css" rel="stylesheet" />

<section class="container-fluid min-vh-100 d-flex align-items-center justify-content-center bg-light py-5">
    <div class="row w-100 shadow-lg rounded overflow-hidden" style="max-width: 90%;">
        <!-- Encabezado -->
        <div class="bg-black w-100 py-4">
            <h2 class="text-white text-center fw-bold fs-1">Mi Perfil</h2>
        </div>

        <!-- Imagen decorativa -->
        <div class="col-md-6 d-none d-md-block p-0">
            <img src="https://images.unsplash.com/photo-1607746882042-944635dfe10e" alt="Perfil decorativo" class="img-fluid h-100 w-100 object-fit-cover">
        </div>

        <!-- Información del usuario y cliente -->
        <div class="col-12 col-md-6 bg-white p-5">
            <!-- Datos de Usuario -->
            <div class="mb-4">
                <h4 class="text-primary mb-3">Datos de Usuario</h4>
                <p><strong>Correo:</strong> @Model.Usuario.correo</p>
                <p><strong>Contraseña:</strong> *********</p>
                <div class="text-center mt-3 p-3">
                    <a asp-action="Edit" asp-controller="Usuario"  asp-route-id="@Model.Usuario.idUsuario" class="custom-button">Editar Usuario</a>
                </div>
            </div>

            <hr>

            <!-- Datos de Cliente -->
            <div class="mt-4" style="">
                <h4 class="text-primary mb-3">Datos de Cliente</h4>
                <p><strong>Nombre:</strong> @Model.Cliente.Nombre @Model.Cliente.Apellidos</p>
                <p><strong>Teléfono:</strong> @Model.Cliente.Telefono</p>
                <p><strong>CURP:</strong> @Model.Cliente.Curp</p>
                <p><strong>RFC:</strong> @Model.Cliente.Rfc</p>
                <p><strong>Dirección:</strong> @Model.Cliente.Calle, @Model.Cliente.Colonia, @Model.Cliente.Ciudad, @Model.Cliente.Estado</p>
                <p><strong>Código Postal:</strong> @Model.Cliente.CodigoPostal</p>
                <div class="text-center mt-3 p-3">
                    <a asp-action="Edit" asp-controller="Cliente" asp-route-id="@Model.Cliente.IdCliente" class="custom-button">Editar Cliente</a>
                </div>
            </div>
        </div>
    </div>
</section>