@model J3OMotors_v1._0.Models.Seguro.SegurosViewModel

@{
    ViewData["Title"] = "Delete";
}

<link href="~/css/MyCustoms.css" rel="stylesheet" />

<section class="min-vh-100 d-flex align-items-center mt-5" style="background-color: #f8f9fa;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <div class="card shadow-lg rounded-4 border-0">
                    <div class="card-header bg-danger text-white text-center rounded-top-4 p-5">
                        <h3 class="mb-0">Eliminar Seguro</h3>
                    </div>
                    <div class="card-body p-5 bg-white rounded-bottom-4">

                        <form asp-action="Delete" method="post" class="fs-5">

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                            <input type="hidden" asp-for="IdSeguro" />

                            <div class="mb-4">
                                <label class="custom-label">Id Seguro</label>
                                <input asp-for="IdSeguro" class="custom-imput" readonly />
                            </div>

                            <div class="mb-4">
                                <label class="custom-label">Tipo</label>
                                <input asp-for="Tipo" class="custom-imput" readonly />
                            </div>

                            <div class="mb-4">
                                <label class="custom-label">Costo</label>
                                <input asp-for="Costo" class="custom-imput" readonly />
                            </div>

                            <div class="mb-4">
                                <label class="custom-label">Proveedor</label>
                                <input asp-for="Proveedor" class="custom-imput" readonly />
                            </div>

                            <div class="mb-4">
                                <label class="custom-label">Duración (meses)</label>
                                <input asp-for="Duracion" class="custom-imput" readonly />
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-danger custom-button">Eliminar</button>
                                <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>