@model J3OMotors_v1._0.Models.Seguro.SegurosViewModel

@{
    ViewData["Title"] = "Edit";
}
<link href="~/css/MyCustoms.css" rel="stylesheet" />


<section class="min-vh-100 d-flex align-items-center mt-5" style="background-color: #f8f9fa;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <div class="card shadow-lg rounded-4 border-0">
                    <div class="card-header bg-dark text-white text-center rounded-top-4 p-5">
                        <h3 class="mb-0">Editar Seguro</h3>
                    </div>
                    <div class="card-body p-5 bg-white rounded-bottom-4">

                        <form asp-action="Edit" method="post" class="fs-5">

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                            <div class="mb-4">
                                <label class="custom-label">Id Seguro</label>
                                <input asp-for="IdSeguro" class="custom-imput" readonly placeholder=""/>
                                <span asp-validation-for="IdSeguro" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label class="custom-label">Tipo</label>
                                <input asp-for="Tipo" class="custom-imput" placeholder="Ej. Seguro básico" />
                                <span asp-validation-for="Tipo" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label class="custom-label">Costo</label>
                                <input asp-for="Costo" class="custom-imput" placeholder="Ej. 5000.00" />
                                <span asp-validation-for="Costo" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label class="custom-label">Proveedor</label>
                                <input asp-for="Proveedor" class="custom-imput" placeholder="Ej. AXA Seguros" />
                                <span asp-validation-for="Proveedor" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label class="custom-label">Duración (meses)</label>
                                <input asp-for="Duracion" class="custom-imput" placeholder="Ej. 12" />
                                <span asp-validation-for="Duracion" class="text-danger small"></span>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="custom-button">Guardar Cambios</button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>