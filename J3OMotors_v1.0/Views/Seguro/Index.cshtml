@model List<J3OMotors_v1._0.Models.Seguro.SegurosViewModel>

@{
    ViewData["Title"] = "Seguros";
}

<link href="~/css/MyCustoms.css" rel="stylesheet" />

<section class="min-vh-100 d-flex align-items-center mt-5" style="background-color: #f8f9fa;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="card shadow-lg rounded-4 border-0">
                    <div class="card-header bg-dark text-white text-center rounded-top-4 p-5">
                        <h3 class="mb-0">Listado de Seguros</h3>
                    </div>

                    <div class="card-body p-5 bg-white rounded-bottom-4">
                        <table class="table table-bordered table-hover text-center align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>Tipo</th>
                                    <th>Costo</th>
                                    <th>Proveedor</th>
                                    <th>Duración (meses)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Tipo</td>
                                        <td>$@item.Costo</td>
                                        <td>@item.Proveedor</td>
                                        <td>@item.Duracion</td>
                                        <td>
                                            <a asp-action="Edit" asp-controller="Seguro" asp-route-id="@item.IdSeguro" class="btn btn-sm btn-primary me-1">Editar</a>
                                            <a asp-action="Delete" asp-controller="Seguro" asp-route-id="@item.IdSeguro" class="btn btn-sm btn-danger">Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="text-center mt-4">
                            <a asp-action="Create" asp-controller="Seguro" class="btn btn-success custom-button">Registrar Nuevo Seguro</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>


