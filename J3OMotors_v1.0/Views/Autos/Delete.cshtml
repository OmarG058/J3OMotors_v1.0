@model J3OMotors_v1._0.Models.Autos.AutosViewModel

@{
    ViewData["Title"] = "Delete";
}

<link href="~/css/MyCustoms.css" rel="stylesheet" />

<section class="min-vh-100 d-flex align-items-center mt-5" style="background-color: #f8f9fa;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <div class="card shadow-lg rounded-4 border-0">
                    <div class="card-header bg-danger text-white text-center rounded-top-4 p-5">
                        <h3 class="mb-0">Eliminar Auto</h3>
                    </div>
                    <div class="card-body p-5 bg-white rounded-bottom-4">

                        <form asp-action="Delete" method="post" class="fs-5">

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                          

                            <div class="mb-4">
                                <label class="custom-label">Id Auto</label>
                                <input readonly asp-route-id="Id" class="custom-imput" placeholder="" />
                            </div>

                            <div class="mb-4">
                                <label class="custom-label">Modelo</label>
                                <input asp-for="Modelo" class="custom-imput" readonly />
                            </div>

                            <div class="mb-4">
                                <label class="custom-label">Fabricante</label>
                                <input asp-for="Fabricante" class="custom-imput" readonly />
                            </div>

                            <div class="mb-4">
                                <label class="custom-label">Fecha del Modelo</label>
                                <input asp-for="FechaModelo" class="custom-imput" readonly />
                            </div>

                            <div class="mb-4">
                                <label class="custom-label">Costo</label>
                                <input asp-for="Costo" class="custom-imput" readonly />
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-danger custom-button">Eliminar</button>
                                <a asp-action="TablaAutos" class="btn btn-secondary ms-2">Cancelar</a>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>