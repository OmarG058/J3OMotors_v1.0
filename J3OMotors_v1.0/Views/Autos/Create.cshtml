@model J3OMotors_v1._0.Models.Autos.AutosViewModel


<link href="~/css/MyCustoms.css" rel="stylesheet" />

<section class="min-vh-100 d-flex align-items-center mt-5" style="background-color: #f8f9fa;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-11 col-lg-10" style="max-width: 1200px;">
                <div class="card shadow-lg rounded-4 border-0">
                    <div class="card-header bg-dark text-white text-center rounded-top-4 p-5">
                        <h3 class="mb-0">Registrar Auto</h3>
                    </div>
                    <div class="card-body p-5 bg-white rounded-bottom-4">

                        <form asp-action="Create" method="post" enctype="multipart/form-data" class="fs-5">

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                            <div class="mb-4">
                                <label class="custom-label">Modelo</label>
                                <input asp-for="Modelo" class="custom-imput" placeholder="Lancer" />
                                <span asp-validation-for="Modelo" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label class="custom-label">Fecha del Modelo</label>
                                <input asp-for="FechaModelo" class="custom-imput" placeholder="2025-01-01" />
                                <span asp-validation-for="FechaModelo" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label class="custom-label">Costo</label>
                                <input asp-for="Costo" class="custom-imput" placeholder="125,000.00" />
                                <span asp-validation-for="Costo" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label class="custom-label">Fabricante</label>
                                <input asp-for="Fabricante" class="custom-imput" placeholder="Mitsubishi" />
                                <span asp-validation-for="Fabricante" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label class="custom-label">Número de Serie</label>
                                <input asp-for="NumeroSerie" class="custom-imput" placeholder="YBF553XGT" />
                                <span asp-validation-for="NumeroSerie" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label class="custom-label">Imagen</label>
                                <input type="file" name="archivo" class="custom-imput" />
                            </div>

                            <div class="text-center">
                                <button asp-action="Create" asp-controller="Autos" class="custom-button">Registrar</button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
