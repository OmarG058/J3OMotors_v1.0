@model J3OMotors_v1._0.Models.Autos.AutosViewModel



<div class="col-md-12">

    <br />
    <h2 class="text-center fs-1">  <b>CREAR AUTO</b>  </h2>
    <hr>
    <br />
    <br />

</div>


<div class="container p-5 shadow-lg" style="background-color: ghostwhite">

    <div class="card-body">

        <form asp-action="Create" method="post" enctype="multipart/form-data" style="font-size:larger">

            <div class="m-4">
                <label>  <b>Modelo:</b>  </label>
                <input asp-for="Modelo" class="form-control form-control-lg"  />
            </div>
            <div class="m-4">
                <label>  <b>Fecha del Modelo:</b>  </label>
                <input asp-for="FechaModelo" class="form-control form-control-lg" />
            </div>
            <div class="m-4">
                <label>  <b>Costo:</b>  </label>
                <input asp-for="Costo" class="form-control form-control-lg" />
            </div>
            <div class="m-4">
                <label>  <b>Fabricante:</b>  </label>
                <input asp-for="Fabricante" class="form-control form-control-lg" />
            </div>
            <div class="m-4">
                <label> <b>Número de Serie:</b>  </label>
                <input asp-for="NumeroSerie" class="form-control form-control-lg" />
            </div>
            <div class="m-4">
                <label>  <b>Imagen:</b>  </label>
                <input type="file" name="archivo" class="form-control form-control-lg" />
            </div>
            <br />
            <button type="submit" class="btn-primary bt-xl shadow-lg mb-lg-5 rounded-3 m-4">Guardar</button>

        </form>

    </div>

</div>