@model J3OMotors_v1._0.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

@if (TempData["RegistroExitoso"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["RegistroExitoso"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<link href="~/css/MyCustoms.css" rel="stylesheet" />

<section class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="row w-100 shadow-lg rounded overflow-hidden" style="max-width: 80%;">

        <!-- Encabezado -->
        <div class="bg-dark w-100 py-4">
            <h2 class="text-white text-center m-0" style="font-size: 2.5rem;">Inicio de Sesión</h2>
        </div>

        <!-- Columna de imagen (oculta en móvil) -->
        <div class="col-md-6 d-none d-md-block p-0">
            <img src="https://static.vecteezy.com/system/resources/previews/022/014/184/non_2x/user-icon-member-login-isolated-vector.jpg"
                 alt="Login image" class="img-fluid h-100 w-100 object-fit-cover">
        </div>

        <!-- Formulario -->
        <div class="col-12 col-md-6 bg-white p-5">
            <h3 class="mb-4 text-center">Bienvenido de nuevo</h3>

            <form asp-action="Index" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <label class="custom-label">Correo electronico </label>
                <div class="form-floating mb-5">
                    <input asp-for="Email" type="email" class=" custom-imput" placeholder="Correo electrónico" />
                   
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <label class="custom-label">Contraseña</label>
                <div class="form-floating mb-5">
                    <input asp-for="Password" type="password" class=" custom-imput " placeholder="Contraseña" />
             
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-grid mb-5">
                    <button type="submit" class="custom-button">Iniciar sesión</button>
                </div>

                <p class="text-center small"><a href="#" class="text-muted text-decoration-none">¿Olvidaste tu contraseña?</a></p>

                <div class="text-center mt-4 mt-5">
                    ¿No tienes cuenta?
                    <a asp-action="Create" asp-controller="Usuario" class="text-decoration-none fw-bold text-primary">
                        Crear una aquí
                    </a>
                </div>

                <!-- Redes sociales -->
                <div class="d-flex justify-content-center mt-4 gap-4">
                    <a href="#"><i class="fab fa-facebook fa-lg text-dark"></i></a>
                    <a href="#"><i class="fab fa-twitter fa-lg text-dark"></i></a>
                    <a href="#"><i class="fab fa-google fa-lg text-dark"></i></a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}