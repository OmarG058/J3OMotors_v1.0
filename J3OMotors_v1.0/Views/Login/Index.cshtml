@model J3OMotors_v1._0.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

@if (TempData["RegistroExitoso"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["RegistroExitoso"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<section style="margin-top:50px;" class="">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 mb-5">Please enter your login and password!</p>

                            <form asp-action="Index" method="post" class="">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" type="email" class="form-control fs-2" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label"></label>
                                    <input asp-for="Password" type="password" class="form-control fs-2" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-outline-light btn-lg px-5">Ingresar</button>
                                </div>

                                <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p>

                                <div class="text-danger mt-3">
                                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                </div>
                            </form>                        

                            <div class="d-flex justify-content-center text-center mt-4 pt-1">
                                <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                                <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                                <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
                            </div>

                        </div>

                        <div>
                            <p class="mb-0">
                                No tienes Cuenta Crear una Aqui<a class="card text-decoration-none text" style="color:rgb(144,146,148);" asp-action="Create" asp-controller="Usuario">Crear Cuenta</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}