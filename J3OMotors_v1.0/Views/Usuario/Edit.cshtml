@model J3OMotors_v1._0.Models.Usuario.UsuarioCreateViewModel

@{
    ViewData["Title"] = "Editar Usuario";
}

<link href="~/css/MyCustoms.css" rel="stylesheet" />

<hr />
<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center bg-light">
   
    <div class="row w-100 shadow-lg rounded overflow-hidden" style="max-width: 80%;">
        <div class="bg bg-black " style="padding:5rem;">
            <h2 class="custom-label" style="color:white; text-align:center; font-size:3rem;">Edicion de Usuario</h2>
        </div>

        <!-- Columna de imagen -->
        <div class="col-md-6 d-none d-md-block p-0">
            <img src="https://st4.depositphotos.com/13194036/31232/i/450/depositphotos_312326876-stock-photo-happy-bearded-man-holding-clipboard.jpg" alt="Imagen perfil" class="img-fluid h-100 w-100 object-fit-cover">
        </div>

        <!-- Columna de formulario -->
        <div class="col-12 col-md-6 bg-white p-5">
            <h3 class="mb-4 text-center">Editar Perfil</h3>

            <form asp-action="View" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                @Html.HiddenFor(model => model.idUsuario)
                <label  class="custom-label">Correo electronico Nuevo</label>
                <div class="form-floating mb-3">
                    <input style="margin: 40px 0 40px 0;" asp-for="correo" class=" custom-imput" placeholder="Correo Electronico" />                 
                    <span asp-validation-for="correo" class="text-danger"></span>
                </div>

                <label  class="custom-label">Contraseña Nuevo</label>
                <div class="form-floating mb-4">
                    <input style="margin: 40px 0 40px 0;" asp-for="contrasenia" class="custom-imput" placeholder="Contraseña" type="password" />
                    
                    <span asp-validation-for="contrasenia" class="text-danger"></span>
                </div>

                <div class="d-flex flex-wrap justify-content-between gap-2">
                    <input  asp-action="Edit" asp-controller="Usuario" type="submit" value="Guardar cambios" class="custom-button" />
                    <a class="custom-button" asp-action="Index" asp-controller="Perfil">Regresar a mi perfil</a>
                </div>
            </form>
        </div>

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
