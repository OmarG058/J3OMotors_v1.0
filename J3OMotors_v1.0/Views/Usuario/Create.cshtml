@model J3OMotors_v1._0.Models.Usuario.UsuarioCreateViewModel

@{
    ViewData["Title"] = "Create";
}
<link href="~/css/MyCustoms.css" rel="stylesheet" />

<section class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="row w-100 shadow-lg rounded overflow-hidden" style="max-width: 80%;">

        <!-- Encabezado -->
        <div class="bg-dark w-100 py-4">
            <h2 class="text-white text-center m-0" style="font-size: 2.5rem;">Crea tu Cuenta</h2>
        </div>

        <!-- Imagen (oculta en pantallas pequeñas) -->
        <div class="col-md-6 d-none d-md-block p-0">
            <img src="https://static.vecteezy.com/system/resources/previews/022/360/050/non_2x/add-user-icon-registration-illustration-sign-avatar-symbol-new-profile-logo-vector.jpg"
                 alt="Registro" class="img-fluid h-100 w-100 object-fit-cover">
        </div>

        <!-- Formulario -->
        <div class="col-12 col-md-6 bg-white p-5">
            <h3 class="mb-4 text-center">Crea tu cuenta</h3>

            <form asp-action="Create" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <label class="custom-label">Correo electronico </label>
                <div class="form-floating mb-5">
                    <input asp-for="correo" type="email" class=" custom-imput" placeholder="nombre@example.com" />
                   
                    <span asp-validation-for="correo" class="text-danger"></span>
                </div>

                <label class="custom-label">Cotraseña</label>
                <div class="form-floating mb-5">
                    <input asp-for="contrasenia" type="password" class=" custom-imput" placeholder="Contraseña" />
                    
                    <span asp-validation-for="contrasenia" class="text-danger"></span>
                </div>

                <label class="custom-label">Tipo de Usuario</label>
                <div class="form-floating mb-5">
                    <select asp-for="idTipo" class=" custom-imput">
                        <option value="2">Cliente</option>
                    </select>
                    
                    <span asp-validation-for="idTipo" class="text-danger"></span>
                </div>

                <div class="d-grid mb-5">
                    <button type="submit" class="custom-button">Registrar</button>
                </div>

                <p class="text-center mt-3">
                    ¿Ya tienes una cuenta?
                    <a asp-action="Index" asp-controller="Login" class="text-decoration-none fw-bold text-primary">
                        Iniciar sesión
                    </a>
                </p>

                <!-- Íconos sociales -->
                <div class="d-flex justify-content-center mt-4 gap-4">
                    <a href="#"><i class="fab fa-facebook fa-lg text-dark"></i></a>
                    <a href="#"><i class="fab fa-twitter fa-lg text-dark"></i></a>
                    <a href="#"><i class="fab fa-google fa-lg text-dark"></i></a>
                </div>
            </form>
        </div>
    </div>
</section>
 @section Scripts {
    <partial name="_ValidationScriptsPartial" />
}